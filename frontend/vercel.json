{
  "version": 2,
  "name": "orgainse-consulting",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "redirects": [
    {
      "source": "/about-us-1",
      "destination": "/about",
      "permanent": true
    },
    {
      "source": "/contactus",
      "destination": "/contact", 
      "permanent": true
    },
    {
      "source": "/shop/:path*",
      "destination": "/services",
      "permanent": true
    },
    {
      "source": "/helpdesk/:path*",
      "destination": "/contact",
      "permanent": true
    },
    {
      "source": "/profile/:path*",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/forum/:path*",
      "destination": "/",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/((?!api/.*).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        },
        {
          "key": "Pragma",
          "value": "no-cache"
        },
        {
          "key": "Expires",
          "value": "0"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}