{
  "version": 2,
  "name": "orgainse-consulting",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "redirects": [
    {
      "source": "/about-us-1",
      "destination": "/about",
      "permanent": true
    },
    {
      "source": "/contactus",
      "destination": "/contact", 
      "permanent": true
    },
    {
      "source": "/shop/:path*",
      "destination": "/services",
      "permanent": true
    },
    {
      "source": "/helpdesk/:path*",
      "destination": "/contact",
      "permanent": true
    },
    {
      "source": "/profile/:path*",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/forum/:path*",
      "destination": "/",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ],
  "functions": {
    "api/*.js": {
      "maxDuration": 10
    }
  }
}